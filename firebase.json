{
    "firestore": {
        "rules": "firebase/rules/firestore.rules",
        "indexes": "firebase/rules/firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "source": "functions"
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "emulators": {
        "firestore": {
            "port": 8080
        },
        "ui": {
            "enabled": true
        }
    }
}