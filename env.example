# ===========================================
# Papito Mamito AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ============== Suno AI (Music Generation) ==============
SUNO_API_KEY=your_suno_api_key_here
SUNO_BASE_URL=https://api.suno.ai
SUNO_MODEL=chirp-v3.5
SUNO_TIMEOUT=30.0

# ============== API Security ==============
# Comma-separated list of API keys for authentication
PAPITO_API_KEYS=your_api_key_1,your_api_key_2
# Optional: comma-separated upload tokens for browser-based uploads (no custom headers)
PAPITO_UPLOAD_TOKENS=your_upload_token_1,your_upload_token_2
PAPITO_API_RATE_LIMIT_PER_MIN=60

# ============== Firebase ==============
# Option 1: Path to service account JSON file
FIREBASE_PROJECT_ID=papito-ai
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/papito-ai-firebase-adminsdk.json

# Option 2: Base64 encoded service account JSON (for cloud deployment)
# FIREBASE_CREDENTIALS_JSON=base64_encoded_json_here

# ============== Instagram / Meta Graph API ==============
# Get these from https://developers.facebook.com
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ID=your_instagram_business_account_id
INSTAGRAM_APP_ID=your_meta_app_id
INSTAGRAM_APP_SECRET=your_meta_app_secret

# ============== X / Twitter API ==============
# Get these from https://developer.twitter.com
X_API_KEY=your_twitter_api_key
X_API_SECRET=your_twitter_api_secret
X_ACCESS_TOKEN=your_twitter_access_token
X_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
X_BEARER_TOKEN=your_twitter_bearer_token

# ============== Buffer (Fallback Scheduler) ==============
# Get from https://buffer.com/developers
BUFFER_ACCESS_TOKEN=your_buffer_access_token
# Comma-separated Buffer profile IDs
BUFFER_PROFILE_IDS=profile_id_1,profile_id_2

# ============== OpenAI (AI Responses) ==============
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# ============== Anthropic Claude (Alternative AI) ==============
# ANTHROPIC_API_KEY=your_anthropic_api_key
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# ============== Telegram Notifications ==============
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ============== Discord Notifications ==============
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============== Agent Configuration ==============
# All times in WAT (West Africa Time = UTC+1)
AGENT_TIMEZONE=Africa/Lagos
AGENT_MORNING_HOUR=8
AGENT_AFTERNOON_HOUR=14
AGENT_EVENING_HOUR=20
# Ratio of content to auto-approve (0.0 to 1.0)
AGENT_AUTO_APPROVE_RATIO=0.8
